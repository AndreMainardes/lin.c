#include <stdio.h>

int main() {
    int numero;

    printf("Digite um número inteiro: ");
    scanf("%d", &numero);

    if (numero % 3 == 0) {
        printf("O número %d é múltiplo de 3.\n", numero);
    } else {
        printf("O número %d não é múltiplo de 3.\n", numero);
    }

    return 0;
}